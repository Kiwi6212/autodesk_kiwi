# AutoDesk Kiwi - Configuration Example
# Copiez ce fichier vers .env et configurez selon vos besoins

# ======================
# Application
# ======================
APP_NAME="AutoDesk Kiwi API"
APP_VERSION="1.1.0"
DEBUG=false  # IMPORTANT: Mettre false en production

# ======================
# Database
# ======================
DATABASE_URL="sqlite:///data.db"

# ======================
# JWT Authentication (SECURITY)
# ======================
# IMPORTANT: Generez une cle secrete unique et gardez-la confidentielle
# Exemple: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY="CHANGEZ-MOI-EN-PRODUCTION-avec-une-cle-secrete-unique"
JWT_EXPIRE_MINUTES=1440  # 24 heures

# ======================
# Rate Limiting (SECURITY)
# ======================
RATE_LIMIT_PER_MINUTE=60

# ======================
# Hyperplanning (optionnel)
# ======================
# URL de votre calendrier iCal Hyperplanning
# Si vous n'utilisez pas Hyperplanning, laissez vide
HYPERPLANNING_URL=""
# Exemple: HYPERPLANNING_URL="https://votre-ecole.fr/calendar.ics"

# Domaines autorises pour les calendriers (protection SSRF)
ALLOWED_CALENDAR_DOMAINS=["hyperplanning.fr","ensup.eu","hp-cgy.ensup.eu"]

# ======================
# API Settings
# ======================
USER_AGENT="AutoDeskKiwi/1.0 (kiwi-app-local-dev)"
API_TIMEOUT=12.0

# ======================
# CORS
# ======================
# Origins autorisees pour le frontend (separees par des virgules)
CORS_ORIGINS=["http://127.0.0.1:8000","http://localhost:8000","http://127.0.0.1:5500","http://localhost:5500"]

# ======================
# Proton Mail (optionnel)
# ======================
PROTON_BRIDGE_USER=""
PROTON_BRIDGE_PASS=""

# ======================
# Spotify (optionnel)
# ======================
SPOTIFY_CLIENT_ID=""
SPOTIFY_CLIENT_SECRET=""
SPOTIFY_REDIRECT_URI="http://localhost:8000/spotify/callback"
